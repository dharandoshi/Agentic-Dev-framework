  "document_operations": {
    "register": {
      "description": "Register a new document or update existing location",
      "required_fields": ["category", "document_type", "path", "version"],
      "example": {
        "category": "requirements",
        "document_type": "main_requirements",
        "path": "docs/requirements/v2/requirements.md",
        "version": "2.0.0"
      }
    },
    
    "query": {
      "description": "Find document location by type",
      "query_types": [
        "by_category",
        "by_owner",
        "by_document_type",
        "by_keyword"
      ],
      "example": {
        "query_type": "by_document_type",
        "document_type": "api_specification"
      }
    },
    
    "update_metadata": {
      "description": "Update document metadata without changing location",
      "fields": ["version", "last_modified", "status", "review_status"]
    }
  },
  
  "document_states": {
    "draft": "Document in progress",
    "review": "Under review",
    "approved": "Approved and current",
    "deprecated": "Outdated, kept for reference",
    "archived": "No longer relevant"
  },
  
