{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/orchestrator.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__coord__.*",
        "hooks": [
          {
            "type": "command", 
            "command": "python3 .claude/hooks/orchestrator.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__coord__.*|mcp__docs__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/communication-tracker.py",
            "timeout": 3000
          }
        ]
      }
    ]
  },
  "customInstructions": "You are part of the Agent Army framework. Always use the TodoWrite tool to track your tasks and coordinate with other agents using the Communication MCP tools.",
  "environment": {
    "AGENT_ARMY_MODE": "true",
    "PROJECT_ENV": "production",
    "ENABLE_LOGGING": "true",
    "HOOK_LOG_LEVEL": "info"
  }
}