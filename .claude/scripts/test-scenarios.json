{
  "test_scenarios": {
    "feature_development": {
      "name": "Complete Feature Development",
      "description": "End-to-end feature development workflow",
      "agents": [
        "requirements-analyst",
        "scrum-master", 
        "system-architect",
        "senior-backend-engineer",
        "senior-frontend-engineer",
        "qa-engineer",
        "technical-writer",
        "devops-engineer"
      ],
      "workflow_steps": [
        {
          "step": "requirements_gathering",
          "responsible_agent": "requirements-analyst",
          "deliverables": ["user_stories", "acceptance_criteria"],
          "estimated_duration": "2-4 hours"
        },
        {
          "step": "project_planning",
          "responsible_agent": "scrum-master",
          "deliverables": ["sprint_plan", "task_breakdown"],
          "estimated_duration": "1-2 hours"
        },
        {
          "step": "technical_architecture",
          "responsible_agent": "system-architect",
          "deliverables": ["system_design", "api_specifications"],
          "estimated_duration": "2-4 hours"
        },
        {
          "step": "backend_implementation",
          "responsible_agent": "senior-backend-engineer",
          "deliverables": ["api_endpoints", "database_schema", "business_logic"],
          "estimated_duration": "4-8 hours"
        },
        {
          "step": "frontend_implementation",
          "responsible_agent": "senior-frontend-engineer", 
          "deliverables": ["user_interface", "api_integration", "responsive_design"],
          "estimated_duration": "4-8 hours"
        },
        {
          "step": "quality_assurance",
          "responsible_agent": "qa-engineer",
          "deliverables": ["test_cases", "test_execution", "bug_reports"],
          "estimated_duration": "2-4 hours"
        },
        {
          "step": "documentation",
          "responsible_agent": "technical-writer",
          "deliverables": ["api_docs", "user_guide", "deployment_guide"],
          "estimated_duration": "1-2 hours"
        },
        {
          "step": "deployment",
          "responsible_agent": "devops-engineer",
          "deliverables": ["ci_cd_pipeline", "infrastructure", "monitoring"],
          "estimated_duration": "2-4 hours"
        }
      ],
      "handoff_points": [
        "requirements-analyst -> scrum-master",
        "scrum-master -> system-architect",
        "system-architect -> senior-backend-engineer",
        "system-architect -> senior-frontend-engineer",
        "senior-backend-engineer -> qa-engineer",
        "senior-frontend-engineer -> qa-engineer", 
        "qa-engineer -> technical-writer",
        "technical-writer -> devops-engineer"
      ],
      "success_criteria": [
        "all_agents_respond",
        "handoffs_complete",
        "deliverables_generated",
        "no_blocking_issues"
      ]
    },
    
    "bug_fix_workflow": {
      "name": "Bug Fix and Resolution",
      "description": "Bug identification, fix, and deployment workflow",
      "agents": [
        "qa-engineer",
        "tech-lead", 
        "senior-backend-engineer",
        "devops-engineer"
      ],
      "workflow_steps": [
        {
          "step": "bug_identification",
          "responsible_agent": "qa-engineer",
          "deliverables": ["bug_report", "reproduction_steps"],
          "estimated_duration": "30 minutes"
        },
        {
          "step": "bug_assignment",
          "responsible_agent": "tech-lead",
          "deliverables": ["task_assignment", "priority_assessment"],
          "estimated_duration": "15 minutes"
        },
        {
          "step": "bug_fix_implementation", 
          "responsible_agent": "senior-backend-engineer",
          "deliverables": ["code_fix", "unit_tests"],
          "estimated_duration": "1-3 hours"
        },
        {
          "step": "fix_deployment",
          "responsible_agent": "devops-engineer",
          "deliverables": ["deployed_fix", "monitoring_alerts"],
          "estimated_duration": "30 minutes"
        }
      ],
      "handoff_points": [
        "qa-engineer -> tech-lead",
        "tech-lead -> senior-backend-engineer",
        "senior-backend-engineer -> devops-engineer"
      ],
      "success_criteria": [
        "bug_reproduced",
        "fix_implemented", 
        "tests_passed",
        "deployment_successful"
      ]
    },
    
    "security_audit": {
      "name": "Security Audit and Remediation",
      "description": "Security assessment and vulnerability remediation",
      "agents": [
        "security-engineer",
        "senior-backend-engineer",
        "senior-frontend-engineer",
        "devops-engineer"
      ],
      "workflow_steps": [
        {
          "step": "security_assessment",
          "responsible_agent": "security-engineer",
          "deliverables": ["vulnerability_report", "risk_assessment"],
          "estimated_duration": "2-4 hours"
        },
        {
          "step": "backend_security_fixes",
          "responsible_agent": "senior-backend-engineer",
          "deliverables": ["api_security_patches", "authentication_improvements"],
          "estimated_duration": "2-6 hours"
        },
        {
          "step": "frontend_security_fixes",
          "responsible_agent": "senior-frontend-engineer", 
          "deliverables": ["xss_protection", "csrf_protection"],
          "estimated_duration": "1-3 hours"
        },
        {
          "step": "infrastructure_hardening",
          "responsible_agent": "devops-engineer",
          "deliverables": ["security_policies", "monitoring_rules"],
          "estimated_duration": "1-2 hours"
        }
      ],
      "handoff_points": [
        "security-engineer -> senior-backend-engineer",
        "security-engineer -> senior-frontend-engineer",
        "security-engineer -> devops-engineer"
      ],
      "success_criteria": [
        "vulnerabilities_identified",
        "fixes_implemented",
        "security_validation_passed",
        "monitoring_enabled"
      ]
    },
    
    "data_pipeline": {
      "name": "Data Pipeline Implementation", 
      "description": "Data engineering and analytics pipeline creation",
      "agents": [
        "data-engineer",
        "system-architect",
        "senior-backend-engineer",
        "devops-engineer"
      ],
      "workflow_steps": [
        {
          "step": "data_requirements_analysis",
          "responsible_agent": "data-engineer",
          "deliverables": ["data_sources_mapping", "transformation_requirements"],
          "estimated_duration": "1-2 hours"
        },
        {
          "step": "pipeline_architecture",
          "responsible_agent": "system-architect",
          "deliverables": ["data_flow_design", "storage_strategy"],
          "estimated_duration": "1-2 hours"
        },
        {
          "step": "pipeline_implementation",
          "responsible_agent": "senior-backend-engineer",
          "deliverables": ["etl_processes", "data_validation"],
          "estimated_duration": "4-8 hours"
        },
        {
          "step": "pipeline_deployment",
          "responsible_agent": "devops-engineer",
          "deliverables": ["automated_deployment", "monitoring_dashboards"],
          "estimated_duration": "2-4 hours"
        }
      ],
      "handoff_points": [
        "data-engineer -> system-architect",
        "system-architect -> senior-backend-engineer",
        "senior-backend-engineer -> devops-engineer"
      ],
      "success_criteria": [
        "data_sources_connected",
        "transformations_working",
        "pipeline_deployed",
        "monitoring_active"
      ]
    }
  },
  
  "test_configurations": {
    "timeout_settings": {
      "quick_test": 30,
      "standard_test": 60,
      "comprehensive_test": 120
    },
    
    "retry_settings": {
      "max_retries": 2,
      "retry_delay": 5
    },
    
    "validation_thresholds": {
      "minimum_success_rate": 80,
      "critical_failure_tolerance": 0,
      "high_priority_failure_tolerance": 2
    }
  },
  
  "mock_responses": {
    "agent_acknowledgment": {
      "status": "acknowledged",
      "message": "Task received and understood",
      "estimated_completion": "2 hours"
    },
    
    "handoff_confirmation": {
      "status": "handoff_complete",
      "message": "Task successfully handed off",
      "next_agent_notified": true
    },
    
    "task_completion": {
      "status": "completed",
      "message": "Task completed successfully",
      "deliverables_ready": true
    }
  },
  
  "error_simulation": {
    "communication_failure": {
      "type": "timeout",
      "description": "Agent communication timeout",
      "recovery_action": "retry_with_exponential_backoff"
    },
    
    "agent_unavailable": {
      "type": "not_found", 
      "description": "Agent definition not found",
      "recovery_action": "fallback_to_alternative_agent"
    },
    
    "workflow_deadlock": {
      "type": "circular_dependency",
      "description": "Agents waiting for each other",
      "recovery_action": "escalate_to_scrum_master"
    }
  }
}