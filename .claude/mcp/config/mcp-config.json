{
  "version": "1.0.0",
  "description": "MCP Server Configuration for Agent Army Framework",
  "mcpServers": {
    "document-registry": {
      "command": "python3",
      "args": [".claude/mcp/servers/core/document-registry.py"],
      "env": {},
      "startup": "auto",
      "description": "Document registry and discovery service",
      "tools": [
        "doc_get_path",
        "doc_register",
        "doc_list_by_owner",
        "doc_find_related",
        "doc_migrate",
        "doc_get_version",
        "doc_search",
        "doc_validate_structure"
      ]
    },
    "utilities": {
      "command": "python3",
      "args": [".claude/mcp/servers/core/utilities.py"],
      "env": {},
      "startup": "auto",
      "description": "Common utilities for agents including date/time operations",
      "tools": [
        "get_current_time",
        "calculate_date",
        "date_difference",
        "convert_timezone",
        "get_week_info",
        "format_timestamp",
        "is_business_day",
        "get_next_business_day"
      ]
    }
  },
  "settings": {
    "log_level": "info",
    "log_directory": ".claude/mcp/logs",
    "data_directory": ".claude/mcp/data",
    "auto_start": false,
    "restart_on_failure": true,
    "max_restarts": 3
  }
}